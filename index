    <script>
        function showPopup(section) {
            let message;
            switch (section) {
                case "inicio":
                    location.reload(); // Reinicia o site
                    return;
                case "sobre":
                    message = "Bem-vindo à seção Sobre. Este site foi feito para a especialidade.";
                    break;
                case "servicos":
                    message = "Nós podemos ensinar você a fazer um site em HTML.";
                    break;
                case "gif":
                    message = "nada, só o gif necessário...";
                    break;
                case "contato":
                    message = "Aqui o contato (11) 9 4002-8922";
                    break;
                default:
                    message = "Seção desconhecida.";
            }
            alert(message); // Exibe o pop-up
        }
    </script>
</head>
<body>
    <header>
        <h1>Site com Cores Seguras</h1>
    </header>
    <nav>
        <a href="javascript:void(0);" onclick="showPopup('inicio')">
            <img src="botao-início.png" alt="Início">
        </a>
        <a href="javascript:void(0);" onclick="showPopup('sobre')">
            <img src="botao-sobre.png" alt="Sobre">
        </a>
        <a href="javascript:void(0);" onclick="showPopup('servicos')">
            <img src="botao-serviços.png" alt="Serviços">
        </a>
        <a href="javascript:void(0);" onclick="showPopup('contato')">
            <img src="botao-contato.png" alt="Contato">
        </a>
        <a href="javascript:void(0);" onclick="showPopup('gif')">
            <img src="animated-button.gif" alt="gif">
        </a>
    </nav>
    <main>
        <p>Clique em qualquer botão acima para navegar e visualizar informações!</p>
    </main>
</body>
